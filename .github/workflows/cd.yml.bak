name: CD

on:
  push:
    branches: [ master, feature/cicd ]

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.10"

      - name: Install Databricks CLI
        run: |
          pip install --upgrade pip
          pip install databricks
          pip install databricks-sdk
      

      - name: Sync GitHub â†’ Databricks Repo
        env:
          DATABRICKS_HOST: ${{ secrets.ALEX_DATABRICKS_HOST }}
          DATABRICKS_TOKEN: ${{ secrets.ALEX_DATABRICKS_TOKEN }}
        run: |
          databricks repos update --path /Repos/sayedsaadmvp@gmail.com/csci-e103-finalproject --branch master



      - name: Deploy Bundle to Workspace
        env:
          DATABRICKS_HOST: ${{ secrets.ALEX_DATABRICKS_HOST }}
          DATABRICKS_TOKEN: ${{ secrets.ALEX_DATABRICKS_TOKEN }}
        run: |
          databricks bundle deploy
          databricks bundle run finalProject_pipeline
